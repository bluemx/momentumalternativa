---
interface Props {
  title: string;
  description: string;
}
const { description, title } = Astro.props;
---
<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 text-center sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-4 sm:gap-6">
      <h1 class="text-4xl font-bold tracking-tight text-8xl text-dark dark:text-white font-display">{title}</h1>
      <p class="text-dark dark:text-primary-200/70 mx-auto max-w-xl text-lg sm:text-xl">
        {description}
      </p>
    </div>
  </div>
</section>
