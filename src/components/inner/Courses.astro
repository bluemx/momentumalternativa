---
interface Props {
    courses: Object;
}
const {courses} = Astro.props;
---


<div class="grid gap-8 md:grid-cols-2 max-w-4xl mx-auto">
    {
      courses.map((item, index) => (
        <div class:list={['space-y-8', index % 2 === 0 && 'lg:mt-16']}>


            <div data-aos="zoom-in" data-aos-mirror="true" data-aos-duration="1000" class="border-8 border-accent relative aspect-square bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 px-6 py-8 overflow-hidden">
              <div class="relative z-10 h-full">
                <p class="text-base">{item.ref}</p>
                <div class="flex flex-col justify-between h-full gap-2">
                    <h3 class="text-6xl font-display font-bold">{item.name}</h3>
                    <div class=" mb-3 bg-gradient-to-b from-white/10  to-white dark:from-dark/10 dark:to-dark mt-auto p-5 text-primary-950 dark:text-primary-200/70 ">
                      {item.description}
                    </div>
                </div>
                
                </div>
              <div class="absolute aspect-square inset-0 z-0 bg-cover opacity-20" style={`background-image:url(assets/curso/${item.img});`}></div>
            </div>


        </div>
      ))
    }
  </div>